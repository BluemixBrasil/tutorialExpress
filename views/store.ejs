<!-- views/store.ejs -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Stores-Page</title>
        <link rel=stylesheet href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <style>
            body {
                padding-top:20px;
                padding-bottom:20px;
            }
            
            .jumbotron{
                margin-top: 10px;
            }
        </style>
    </head>
    
    <body>
        <div class="container">
            <%- include('partials/navbar') %>
            <div class="jumbotron">
                <h1>All About Node</h1>
                <p class="lead">Check out out our stores below.</p>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="list-group">
                        <!-- loop over posts and render them -->
                        <% locations.forEach((location) => { %>
                        <a href="/post/<%= location.city %>" class="list-group-item">
                        <h4 class="list-group-item-heading"><%= location.city %> - Number of stores: <%= location.stores %></h4>
                        </a>
                            
                        <% }) %>
                    </div>
                </div>
            </div>
            <%- include('partials/footer') %>
        </div>
    </body>
</html>