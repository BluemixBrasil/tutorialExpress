<!-- views/post.ejs -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= title %> | Node.js Blog</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <style>
            body {
                padding-top: 20px;
                padding-bottom: 20px;
            }
        </style>
    </head>
    
    <body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div>
            <h2 id="title"><%= title %></h2>
            <p>by <a href="#"><%= author %></a></p>
            
            <p><%= body %></p>
        </div>
        
        <button type="button" id="delete"><span class="glyphicon glyphicon-trash"></span></button>
        <script>
        
            var title = "<%=title%>";
            
            $('#delete').click(function(){
                console.log(title);
               $.post('/delete',{title:title})
               .done(function onSuccess(title){
                  console.log("data sent"); 
               })
               .fail(function onError(error){
                   console.log(error);
               });
            });
        </script>
    </div>
</body>

</html>
